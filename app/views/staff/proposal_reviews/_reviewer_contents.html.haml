.proposal-section
  %h3.control-label Events
  %div
    = proposal.occurrencesView

.proposal-section
  %h3.control-label Abstract
  .markdown{ data: { 'field-id' => 'proposal_abstract' } }
    = proposal.abstract_markdown

.proposal-section
  %h3.control-label Speakers bio
  - proposal.speakers.each do |speaker|
    %div
      = link_to(speaker.name, event_staff_program_speaker_path(speaker.proposal.event, speaker))
    %p
      = speaker.bio

.proposal-section
  %h3.control-label Keywords
  %div{ data: { 'field-id' => 'proposal_keywords' } }
    = proposal.keywords

.proposal-section
  %h3.control-label Required Knowledge
  .markdown{ data: { 'field-id' => 'proposal_details' } }
    = markdown(proposal.details)

.proposal-section
  %h3.control-label Learning Objectives
  .markdown{ data: { 'field-id' => 'proposal_pitch' } }
    = markdown(proposal.pitch)

- if proposal.custom_fields.any?
  - proposal.proposal_data[:custom_fields].select do |key,value|
    .proposal-section
      %h3.control-label= key.capitalize
      %div
      = value.capitalize
      %div
